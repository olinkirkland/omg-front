<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                autoDrawBackground="false"
                width="100%"
                height="100%"
                creationComplete="onCreationComplete(event)">
    
    <fx:Script>
		<![CDATA[
        import mx.events.FlexEvent;
        import mx.utils.ObjectUtil;
        
        override public function set data(value: Object): void
        {
            super.data = ObjectUtil.clone(value);
            
            if (initialized)
            {
                update();
            }
        }
        
        private function onCreationComplete(event: FlexEvent): void
        {
            update();
        }
        
        private function update(): void
        {
            txtLabel.setStyle("fontSize", 14);
            txtLabel.setStyle("fontWeight", "normal");
            
            switch (data.type)
            {
                case "header":
                    txtLabel.setStyle("fontSize", 18);
                    txtLabel.setStyle("fontWeight", "bold");
                    break;
                case "subheader":
                    txtLabel.setStyle("fontSize", 14);
                    txtLabel.setStyle("fontWeight", "bold");
                    break;
                case "body":
                    txtLabel.setStyle("fontSize", 14);
                    txtLabel.setStyle("fontWeight", "normal");
                    break;
                default:
                    txtLabel.text = "[" + data.type + "]";
                    break;
            }
            
            txtLabel.text = data.data;
        }
        ]]>
	</fx:Script>
    
    
    <s:VGroup width="100%"
              padding="10">
        <s:Label id="txtLabel"
                 width="100%" />
    </s:VGroup>

</s:ItemRenderer>
