<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   creationComplete="onCreationComplete(event)"
                   autoIconManagement="false">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <fx:Script><![CDATA[
        import global.Color;

        import mx.events.FlexEvent;

        private function onCreationComplete(event:FlexEvent):void
        {
            var t:ColorTransform                 = iconDisplay.transform.colorTransform;
            t.color                              = Color.white;
            iconDisplay.transform.colorTransform = t;

            Label(labelDisplay).setStyle("color", Color.white);
            if (Label(labelDisplay).text.length == 0)
                Label(labelDisplay).includeInLayout = false;
        }
        ]]></fx:Script>

    <s:states>
        <s:State name="disabled" />
        <s:State name="down" />
        <s:State name="over" />
        <s:State name="up" />
    </s:states>

    <s:Group height="30">

        <s:Rect width="100%"
                height="100%"
                radiusX="{height/2}"
                radiusY="{height/2}">
            <s:fill>
                <s:SolidColor id="color"
                              color="{Color.black}"
                              alpha=".4"
                              alpha.disabled=".1" />
            </s:fill>
        </s:Rect>

        <s:Rect width="100%"
                height="100%"
                radiusX="{height/2}"
                radiusY="{height/2}">
            <s:fill>
                <s:SolidColor color="{Color.black}"
                              alpha="0"
                              alpha.over=".2"
                              alpha.down=".4" />
            </s:fill>
        </s:Rect>

        <s:HGroup height="100%"
                  padding="5"
                  paddingLeft="15"
                  paddingRight="15"
                  verticalAlign="middle"
                  gap="5">

            <s:BitmapImage id="iconDisplay"
                           includeInLayout="{iconDisplay.source}"
                           width="12"
                           height="12"
                           smooth="true" />

            <s:Label id="labelDisplay" />

        </s:HGroup>

    </s:Group>

</s:SparkButtonSkin>