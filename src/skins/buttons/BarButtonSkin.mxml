<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   creationComplete="onCreationComplete(event)"
                   autoIconManagement="false">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <fx:Script><![CDATA[
        import global.Color;

        import mx.events.FlexEvent;

        private function onCreationComplete(event:FlexEvent):void
        {
            var t:ColorTransform                 = iconDisplay.transform.colorTransform;
            t.color                              = Color.body;
            iconDisplay.transform.colorTransform = t;

            Label(labelDisplay).setStyle("color", Color.body);
            if (Label(labelDisplay).text.length == 0)
                Label(labelDisplay).includeInLayout = false;
        }
        ]]></fx:Script>

    <s:states>
        <s:State name="disabled" />
        <s:State name="down" />
        <s:State name="over" />
        <s:State name="up" />
    </s:states>

    <s:Group height="41">

        <s:Rect width="100%"
                height="100%">
            <s:fill>
                <s:LinearGradient rotation="90">
                    <s:GradientEntry color="{Color.black}"
                                     alpha="0"
                                     alpha.over=".3"
                                     alpha.down=".5" />
                    <s:GradientEntry color="{Color.black}"
                                     alpha="0"
                                     alpha.over=".1"
                                     alpha.down=".3" />
                </s:LinearGradient>
            </s:fill>
        </s:Rect>

        <!--Icon-->
        <s:HGroup height="100%"
                  padding="5"
                  paddingLeft="15"
                  paddingRight="15"
                  verticalAlign="middle"
                  gap="5">

            <s:BitmapImage id="iconDisplay"
                           includeInLayout="{iconDisplay.source}"
                           width="16"
                           height="16"
                           smooth="true" />

            <s:Label id="labelDisplay" />

        </s:HGroup>

        <s:VGroup width="100%"
                  padding="3">
            <s:Rect width="100%"
                    height="4"
                    radiusX="2"
                    radiusY="2">
                <s:fill>
                    <s:SolidColor color="{Color.white}"
                                  alpha="0"
                                  alpha.over=".2"
                                  alpha.down=".2" />
                </s:fill>
            </s:Rect>
        </s:VGroup>

    </s:Group>

</s:SparkButtonSkin>