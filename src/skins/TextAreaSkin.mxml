<?xml version="1.0" encoding="utf-8"?>

<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.TextArea")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="normalWithPrompt" />
        <s:State name="disabledWithPrompt" />
    </s:states>

    <s:Group width="100%"
             height="100%">

        <s:Rect width="100%"
                height="100%"
                radiusX="10"
                radiusY="10">
            <s:fill>
                <s:SolidColor color="{Color.inputStroke}" />
            </s:fill>
        </s:Rect>

        <s:VGroup width="100%"
                  height="100%"
                  padding="1">
            <s:Rect width="100%"
                    height="100%"
                    radiusX="10"
                    radiusY="10">
                <s:fill>
                    <s:SolidColor color="{Color.inputFill}" />
                </s:fill>
            </s:Rect>
        </s:VGroup>

        <s:VGroup width="100%"
                  height="100%"
                  verticalAlign="middle"
                  padding="15">
            <s:Scroller width="100%"
                        height="100%">
                <s:RichEditableText id="textDisplay"
                                    width="100%"
                                    height="100%" />
            </s:Scroller>
        </s:VGroup>

    </s:Group>

    <fx:Script><![CDATA[
        import global.Color;
        ]]></fx:Script>
</s:Skin>